include: java/awt.def

subcode: canvas
    $(if:!size)
        $(set:size=800,600)
    &call add_canvas, canvas, $(size)
        Graphics2D g2 = (Graphics2D) g;
        BLOCK

    # -------------------------------------- 
    subcode: drawLine(x1,y1,x2,y2)
        g.drawLine($(x1),$(y1),$(x2),$(y2));

    subcode: fillRect(x,y,w,h)
        g.fillRect($(x),$(y),$(w),$(h));

    subcode: load_img(file)
        $import java.io.*
        $import java.awt.image.*
        $import javax.imageio.*
        BufferedImage img = null;
        try {
            img = ImageIO.read(new File("$(file)"));
        } catch (IOException e) {
            $print IOException
        }
